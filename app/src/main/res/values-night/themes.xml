<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RegraDeTres" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Background">
        <item name="android:background">@color/gray</item>
    </style>
    <style name="LogoColor">
        <item name="android:tint">@color/dark_white</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gray</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">@color/dark_white</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:backgroundTint">@color/dark_white</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="endIconTint">@color/dark_white</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textColor">@color/dark_white</item>
    </style>
</resources>